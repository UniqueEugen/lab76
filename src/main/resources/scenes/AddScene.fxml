<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab5gui.controllers.AddController">
    <children>
        <GridPane layoutX="20.0" layoutY="17.0" prefHeight="130.0" prefWidth="423.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="185.0" minWidth="10.0" prefWidth="157.6" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="260.19999999999993" minWidth="10.0" prefWidth="251.19999999999996" />
            </columnConstraints>
            <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label prefHeight="48.0" prefWidth="178.0" text="Please, write name:" GridPane.rowIndex="1">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="nickName" prefHeight="36.0" prefWidth="173.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label prefHeight="30.0" prefWidth="180.0" text="Please, choose type:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <HBox prefHeight="52.0" prefWidth="174.0" GridPane.columnIndex="1">
               <children>
                  <RadioButton fx:id="martenRadio" mnemonicParsing="false" prefHeight="64.0" prefWidth="87.0" selected="true" text="Marten" toggleGroup="$ferretType">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <toggleGroup>
                        <ToggleGroup fx:id="ferretType" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="otterRadio" mnemonicParsing="false" prefHeight="62.0" prefWidth="84.0" text="Otter" toggleGroup="$ferretType">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="masterRadio" mnemonicParsing="false" prefHeight="66.0" prefWidth="70.0" text="Master" toggleGroup="$ferretType">
                     <font>
                        <Font size="14.0" />
                     </font></RadioButton>
               </children>
            </HBox>
            </children>
        </GridPane>
        <Button layoutX="222.0" layoutY="149.0" mnemonicParsing="false" onAction="#ok" prefHeight="37.0" prefWidth="95.0" text="Save" />
        <Button layoutX="325.0" layoutY="149.0" mnemonicParsing="false" onAction="#cansel" prefHeight="37.0" prefWidth="95.0" text="Cansel" />
    </children>
</AnchorPane>
